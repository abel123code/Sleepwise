{
  "watch": [
    "server.js",
    "routes/",
    "controllers/",
    "models/",
    "middleware/",
    "config/"
  ],
  "ext": "js,json",
  "ignore": [
    "node_modules/",
    "logs/",
    "*.log",
    ".git/",
    "coverage/"
  ],
  "delay": 1000,
  "env": {
    "NODE_ENV": "development"
  },
  "verbose": true
}
